
varying vec3 v_position;
//varying float v_depth;
varying vec2 v_texCoord;

void main()
{	
    float depth = length(v_position) / 100;

    vec2 moments;
    moments.x = depth;
    moments.y = depth * depth;

    float dx = dFdx(depth);
	float dy = dFdy(depth);
	moments.y += 0.25 * (dx * dx + dy * dy);

    gl_FragColor.xy = moments;
    //gl_FragDepth = depth;
}
