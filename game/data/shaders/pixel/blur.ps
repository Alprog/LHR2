
varying vec2 v_texCoord;
varying vec2 v_blurTexCoords[6];
uniform sampler2D mainTexture;

void main()
{
    gl_FragColor = vec4(0.0);
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[0]) * 0.06;
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[1]) * 0.12;
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[2]) * 0.19;
    gl_FragColor += texture2D(mainTexture, v_texCoord) * 0.26;
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[3]) * 0.19;
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[4]) * 0.12;
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[5]) * 0.06;
}