
varying vec2 v_texCoord;
varying vec2 v_blurTexCoords[10];
uniform sampler2D mainTexture;

void main()
{
    gl_FragColor = vec4(0.0);
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[0]) * 0.02;
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[1]) * 0.04;
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[2]) * 0.08;
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[3]) * 0.12;
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[4]) * 0.15;
    gl_FragColor += texture2D(mainTexture, v_texCoord) * 0.18;
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[5]) * 0.15;
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[6]) * 0.12;
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[7]) * 0.08;
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[8]) * 0.04;
    gl_FragColor += texture2D(mainTexture, v_blurTexCoords[9]) * 0.02;
}