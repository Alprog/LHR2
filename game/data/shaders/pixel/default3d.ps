
varying vec2 v_texCoord;
varying vec3 v_normal;
varying vec2 v_screenPos;
varying vec2 v_prevScreenPos;

uniform sampler2D mainTexture;

#include "utils.inc"

void main()
{	
    vec3 albedo = texture2D(mainTexture, v_texCoord).rgb;
    vec2 velocity = (v_screenPos - v_prevScreenPos) * 10;
    
    outputGBuffer(albedo, v_normal, velocity);
}