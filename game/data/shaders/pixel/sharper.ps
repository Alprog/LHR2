
varying vec2 v_texCoord;
uniform float sharpness;

void main()
{	
	float d = 1.0 / 512.0;

	vec4 tex = texture2D(CC_Texture0, v_texCoord) * (1.0 + 4.0 * sharpness);
	tex -= texture2D(CC_Texture0, v_texCoord + vec2(0.0, d)) * sharpness;
	tex -= texture2D(CC_Texture0, v_texCoord - vec2(0.0, d)) * sharpness;
	tex -= texture2D(CC_Texture0, v_texCoord + vec2(d, 0.0)) * sharpness;
	tex -= texture2D(CC_Texture0, v_texCoord - vec2(d, 0.0)) * sharpness;
	gl_FragColor = tex;	
}
